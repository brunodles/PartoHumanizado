<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/card_background" />
        </shape>
    </item>
    <item
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape
            android:dither="true"
            android:shape="rectangle" android:innerRadius="@dimen/card_corner_radius">
            <corners android:radius="@dimen/card_corner_radius" />
            <solid android:color="@color/card_shadow" />

            <padding
                android:left="5dp"
                android:right="5dp" />
        </shape>
    </item>

    <item android:bottom="@dimen/card_shadow_size">
        <shape
            android:dither="true"
            android:shape="rectangle">
            <corners android:radius="@dimen/card_corner_radius" />

            <solid android:color="@android:color/white" />
            <padding android:bottom="@dimen/card_shadow_size" />
        </shape>
    </item>
</layer-list>